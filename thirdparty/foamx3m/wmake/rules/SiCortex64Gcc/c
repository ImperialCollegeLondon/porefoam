.SUFFIXES: .c .h

cWARN        = -Wall

cc          = gcc -mabi=64
#cc          = scgcc -mabi=64

include $(RULES)/c$(WM_COMPILE_OPTION)

cFLAGS      = -G0 $(GFLAGS) $(cWARN) $(cOPT) $(cDBUG) $(LIB_HEADER_DIRS) -fPIC

ctoo        = $(WM_SCHEDULER) $(cc) $(cFLAGS) -c $$SOURCE -o $@

LINK_LIBS   = $(cDBUG)

LINKLIBSO   = $(cc) -shared
LINKEXE     = $(cc) -Xlinker -z -Xlinker nodefs
